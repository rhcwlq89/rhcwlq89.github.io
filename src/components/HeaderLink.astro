---
import type { HTMLAttributes } from 'astro/types';
import type { Lang } from '../i18n/languages';

type Props = HTMLAttributes<'a'> & { lang?: Lang };

const { href, lang = 'ko', class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
// Strip /en/ prefix for comparison
const normalizedPath = pathname.replace(/^en\//, '');
const subpath = normalizedPath.match(/[^\/]+/g);

const normalizedHref = (href as string).replace(/^\/en/, '');
const isActive = normalizedHref === `/${normalizedPath}` || normalizedHref === '/' + (subpath?.[0] || '');
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
