---
import type { Lang } from '../i18n/languages';

interface Props {
	date: Date;
	lang?: Lang;
}

const { date, lang = 'ko' } = Astro.props;
const locale = lang === 'en' ? 'en-US' : 'ko-KR';
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
