---
import BaseHead from "../../../components/BaseHead.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";

const effectiveDate = "2026-02-17";
const appName = "Born:K-Zodiac";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Terms of Use | ${appName}`}
      description={`${appName} Terms of Use`}
      lang="en"
    />
  </head>
  <body>
    <Header lang="en" />
    <main>
      <article>
      <h1>{appName} Terms of Use</h1>
      <p class="subtitle">Effective date: {effectiveDate}</p>

      <h2>1. Service Overview</h2>
