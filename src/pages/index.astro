---
import BaseHead from "../components/BaseHead.astro";
import { getCollection } from "astro:content";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

const posts = (await getCollection("blog"))
  .filter((post) => !post.id.startsWith("en/"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="ko">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} lang="ko" />
    <style>
      main {
        width: 900px;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      @media (max-width: 900px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
    </style>
  </head>
  <body>
    <div id="lang-banner" style="display:none;">
      <p>
        üåê An English version of this site is available.
        <a href="/en/" id="lang-banner-link">Switch to English</a>
        <button type="button" id="lang-banner-close" aria-label="Close">&times;</button>
      </p>
    </div>
    <script is:inline>
      (function() {
        var dominated = localStorage.getItem('langBannerDismissed');
        var preferred = localStorage.getItem('preferredLang');
        if (dominated || preferred === 'ko') return;
        if (preferred === 'en' || (navigator.language && navigator.language.startsWith('en'))) {
          document.getElementById('lang-banner').style.display = 'block';
        }
        document.getElementById('lang-banner-link').addEventListener('click', function() {
          localStorage.setItem('preferredLang', 'en');
        });
        document.getElementById('lang-banner-close').addEventListener('click', function() {
          localStorage.setItem('langBannerDismissed', '1');
          document.getElementById('lang-banner').style.display = 'none';
        });
      })();
    </script>
    <style>
      #lang-banner {
        background: var(--accent);
        color: #fff;
        text-align: center;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
      }
      #lang-banner p {
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        flex-wrap: wrap;
      }
      #lang-banner a {
        color: #fff;
        font-weight: 700;
        text-decoration: underline;
      }
      #lang-banner-close {
        background: none;
        border: none;
        color: #fff;
        font-size: 1.2rem;
        cursor: pointer;
        padding: 0 0.25rem;
        line-height: 1;
      }
    </style>
    <Header lang="ko" />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  {post.data.heroImage && (
                    <Image
                      width={900}
                      height={450}
                      src={post.data.heroImage}
                      alt={post.data.title}
                    />
                  )}
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer lang="ko" />
  </body>
</html>
