---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import Comments from "../components/Comments.astro";
import type { Lang } from "../i18n/languages";
import { useTranslations } from "../i18n/utils";

type Props = CollectionEntry<"blog">["data"] & { lang?: Lang };

const { title, description, pubDate, updatedDate, heroImage, lang = 'ko' } = Astro.props;
const t = useTranslations(lang);
---

<html lang={lang}>
  <head>
    <BaseHead
      title={title}
      description={description}
      lang={lang}
      image={heroImage}
      type="article"
      publishedTime={pubDate}
      modifiedTime={updatedDate}
    />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        max-width: 900px;
        margin: auto;
      }
      .hero-image img {
        width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 900px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
      .ad-container {
        margin: 1.5em 0;
        text-align: center;
      }
    </style>
  </head>

  <body>
    <Header lang={lang} />
    <main>
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <Image width={900} height={450} src={heroImage} alt={title} />
            )
          }
        </div>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={pubDate} lang={lang} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    {t('blog.lastUpdated')} <FormattedDate date={updatedDate} lang={lang} />
                  </div>
                )
              }
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          <!-- Google AdSense -->
          <div class="ad-container">
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-6258435285844682"
                 data-ad-slot="2530322076"
                 data-ad-format="auto"
                 data-full-width-responsive="true"></ins>
            <script>
                 (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
          </div>
          <slot />
        </div>
      </article>
      <Comments lang={lang} />
    </main>
    <Footer lang={lang} />
  </body>
</html>
